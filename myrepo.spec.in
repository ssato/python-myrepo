%{!?python_sitelib: %global python_sitelib %(%{__python} -c "from distutils.sysconfig import get_python_lib; print(get_python_lib())")}

# disable debuginfo
%define debug_package %{nil}


Name:           myrepo
Version:        @VERSION@
Release:        1%{?dist}
Summary:        Tool to create and maintain your yum repositories
Group:          Development/Tools
License:        GPLv3+
URL:            https://github.com/ssato/python-myrepo
Source0:        https://github.com/ssato/python-myrepo/tarball/master/%{name}-%{version}.tar.gz
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildArch:      noarch
BuildRequires:  python
Requires:       rpm-python
Requires:       autoconf
Requires:       automake
Requires:       createrepo
Requires:       mock
Requires:       packagemaker
Requires:       rpm-build
Obsoletes:      rpmkit < 0.2.10-1


%description
Simple tool to create and maintain packages in your yum repositories.


%prep
%setup -q


%build
%{__python} setup.py build


%install
rm -rf $RPM_BUILD_ROOT
%{__python} setup.py install -O1 --skip-build --root $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT%{_sysconfdir}/myrepo.d


%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root,-)
%doc README
%doc tests
%{_bindir}/*
%{python_sitelib}/*
%{_sysconfdir}/myrepo.d
%{_datadir}/myrepo/templates/1


